<%= form_for @course, :html => { :class => "form-horizontal course" } do |f| %>

    <% if @course.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @course.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :course_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :course_name, :class => 'form-control' %>
    </div>
    <%= error_span(@course[:course_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :university_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :university_id,  University.all.pluck(:university_name,:id),{}, {:class => 'form-control'} %>

    </div>
    <%= error_span(@course[:university_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            courses_path, :class => 'btn btn-default' %>

<% end %>
