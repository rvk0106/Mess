<%= form_for @university, :html => { :class => "form-horizontal university" } do |f| %>

    <% if @university.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@university.errors.count, "error") %> prohibited this university from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @university.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :university_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :university_name, :class => 'form-control' %>
    </div>
    <%= error_span(@university[:university_name]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            universities_path, :class => 'btn btn-default' %>

<% end %>
