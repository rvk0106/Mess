<!-- Fixed navbar -->
<div data-scroll-index="0" class="top_page">
  <div class="col-md-1"></div>

  <div class="col-md-4 ptop">
    <div class="col-md-12 login_heading"><h1>LOGIN</h1></div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, :placeholder => "Email", :class => "form-control"%>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autofocus: true, :placeholder => "Password", :class => "form-control"%>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me , class: "login_label"%>
        </div>
      <% end -%>
      <div class="col-md-12">
        <div class="col-md-8"></div>
        <div class="col-md-4 login_button">
          <div >
            <%= f.submit "Log in", :class => "btn btn-primary btn-lg pull-right" %>
          </div>
        </div>
      </div>
      <div class="col-md-12">&nbsp;</div>
      <div class="col-md-12 login_button">
        <div class="col-md-6">
          <%= link_to "FIND A TUTOR" , "", :class => "btn btn-success btn-mg pull-left", :onclick => "return openRegisterform('.student')" %>
        </div>
        <div class="col-md-6">
          <%= link_to "FIND A JOB" , "", :class => "btn btn-success btn-mg pull-right", :onclick => "return openRegisterform('.faculty')" %>
        </div>
      </div>
    <%end%>
  </div>
  <div class="col-md-2"> 
  </div>
  <div class="col-md-4 bgregister student">
    <%= render :partial => "/users/registrations/new", :locals => {:type => "student"} %>
  </div>
  <div class="col-md-4 bgregister faculty">
    <%= render :partial => "/users/registrations/new", :locals => {:type => "faculty"} %>
  </div>
</div>
